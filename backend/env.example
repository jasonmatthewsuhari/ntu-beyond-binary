# Fluent Accessibility Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Google Gemini API Key (Required)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Optional: Server Configuration
# Uncomment and modify if you need different settings

# Backend server host (default: 127.0.0.1)
# BACKEND_HOST=127.0.0.1

# Backend server port (default: 8000)
# BACKEND_PORT=8000

# Enable debug mode (default: false)
# DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
# LOG_LEVEL=INFO

# Optional: Desktop Agent Configuration

# Agent timeout in seconds (default: 120)
# AGENT_TIMEOUT=120

# Maximum agent retries on failure (default: 3)
# AGENT_MAX_RETRIES=3

# Optional: Data Storage Configuration

# Data directory path (default: ./data)
# DATA_DIR=./data

# Enable automatic backups (default: true)
# AUTO_BACKUP=true

# Backup interval in hours (default: 24)
# BACKUP_INTERVAL=24

# Optional: WebSocket Configuration

# WebSocket ping interval in seconds (default: 30)
# WS_PING_INTERVAL=30

# WebSocket timeout in seconds (default: 60)
# WS_TIMEOUT=60

# Optional: Input Method Configuration

# Voice recognition confidence threshold (default: 0.7)
# VOICE_CONFIDENCE_THRESHOLD=0.7

# MediaPipe detection confidence (default: 0.5)
# MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5

# MediaPipe tracking confidence (default: 0.5)
# MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# Maximum video frame width for processing (default: 1280)
# MAX_VIDEO_WIDTH=1280

# Maximum video frame height for processing (default: 720)
# MAX_VIDEO_HEIGHT=720
